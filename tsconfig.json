{
  "compilerOptions": {
    "experimentalDecorators": true,
    "jsx": "react",
    "keyofStringsOnly": true,
    "target": "es5",
    "module": "esnext",
    "allowJs": true,
    "outDir": "./lib",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": ["es2015", "es6", "esnext", "dom"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "#*": ["src/*"]
    }
  }
}
